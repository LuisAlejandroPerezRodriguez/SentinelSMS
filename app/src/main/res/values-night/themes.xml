<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SentinelSMS" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500_dark_mode</item>
        <item name="colorPrimaryVariant">@color/blue_700_dark_mode</item>
        <item name="colorOnPrimary">@color/text_primary_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_200</item>
        <item name="colorSecondaryVariant">@color/blue_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Background color. -->
        <item name="android:colorBackground">@color/grey_900</item>
        <!-- Text color. -->
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorHint">@color/hint_text_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>
</resources>
